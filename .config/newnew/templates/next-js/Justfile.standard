# List all recipes
default:
    @just --list

# Install dependencies
install:
    npm install

# Run development server
dev:
    npm run dev

# Build for production
build:
    npm run build

# Start production server
start:
    npm run start

# Run linting
lint:
    npm run lint

# Clean build artifacts
clean:
    rm -rf .next
    rm -rf node_modules 