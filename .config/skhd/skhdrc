#!/bin/bash

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service; skhd --restart-service
ctrl + alt - t : yabai -m window --scratchpad recover


# Modes
:: default : borders active_color=0xff89b4fa
:: active @ : borders active_color=0xffcdd6f4
:: scratchpad @ : borders active_color=0xffb4befe
:: focus @ : borders active_color=0xff89dceb
:: move @ : borders active_color=0xffeba0ac

# Mode shifting
default < alt - f ; focus
default < alt - s ; scratchpad
default < alt - m ; move

scratchpad, focus, active, move < escape ; default
scratchpad, focus, active, move < return ; default

# change window focus within space
focus < s : yabai -m window --focus south
focus < w : yabai -m window --focus north
focus < a : yabai -m window --focus west
focus < d : yabai -m window --focus east

# change focus between external displays (left and right)
focus < q : yabai -m display --focus west
focus < e : yabai -m display --focus east

# focus space window to space #
focus < 1 : yabai -m space --focus 1;
focus < 2 : yabai -m space --focus 2;
focus < 3 : yabai -m space --focus 3;
focus < 4 : yabai -m space --focus 4;
focus < 5 : yabai -m space --focus 5;
focus < 6 : yabai -m space --focus 6;
focus < 7 : yabai -m space --focus 7;
focus < 8 : yabai -m space --focus 8;
focus < 9 : yabai -m space --focus 9;
focus < 0 : yabai -m space --focus 10;

# move windows
move < s : yabai -m window --swap south
move < w : yabai -m window --swap north
move < a : yabai -m window --swap west
move < d : yabai -m window --swap east

# move window and split
move < ctrl - s : yabai -m window --warp south
move < ctrl - w : yabai -m window --warp north
move < ctrl - a : yabai -m window --warp west
move < ctrl - d : yabai -m window --warp east

# move window to display left and right
move < q : yabai -m window --display west; yabai -m display --focus west
move < e : yabai -m window --display east; yabai -m display --focus east

#move window to prev and next space
move < p : yabai -m window --space prev; yabai -m space --focus prev
move < n : yabai -m window --space next; yabai -m space --focus next

# move window to space #
move < 1 : yabai -m window --space 1;
move < 2 : yabai -m window --space 2;
move < 3 : yabai -m window --space 3;
move < 4 : yabai -m window --space 4;
move < 5 : yabai -m window --space 5;
move < 6 : yabai -m window --space 6;
move < 7 : yabai -m window --space 7;
move < 8 : yabai -m window --space 8;
move < 9 : yabai -m window --space 9;

# toggle window float
ctrl + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2; sketchybar --trigger window_focus

# maximize a window
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

scratchpad < t : yabai -m window --toggle kitty || open  -a kitty ; skhd -k 'escape'
scratchpad < m : yabai -m window --toggle music || open  -a Music ; skhd -k 'escape'
scratchpad < o : yabai -m window --toggle obsidian || open  -a Obsidian ; skhd -k 'escape'
scratchpad < d : yabai -m window --toggle discord || open  -a Discord ; skhd -k 'escape'



